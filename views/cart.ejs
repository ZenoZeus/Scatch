<%- include('./partials/header') %>


<div class="w-full min-h-screen flex flex-col lg:flex-row gap-10 px-10 py-16">
  
  <!-- üõí Left Section: Cart Items -->
  <div class="w-full lg:w-2/3 space-y-5">
    <% if (getUser.cart.length === 0) { %>
      <div class="text-center text-2xl font-semibold text-gray-500">
        Your cart is empty üõçÔ∏è
      </div>
    <% } else { %>
      <% getUser.cart.forEach(element => { %>
        <div class="w-full flex items-center border border-blue-400 rounded-lg overflow-hidden shadow-md">
          <!-- Product Image -->
          <div class="w-1/4 bg-[<%= element.bgcolor %>] flex justify-center items-center p-4">
            <img class="w-32 h-32 object-contain" 
                 src="data:image/jpeg;base64,<%= element.image.toString('base64') %>" 
                 alt="<%= element.name %>">
          </div>

          <!-- Product Details -->
          <div class="w-3/4 flex flex-col justify-between bg-[<%= element.panelcolor %>] px-6 py-4 text-white">
            <div class="flex justify-between items-center">
              <h3 class="text-xl font-semibold"><%= element.name %></h3>
              <a href="/removefromcart/<%= element._id%>"><i class="ri-delete-bin-line text-2xl"></i></a>
            </div>
            
            <!-- <div class="flex items-center gap-4 mt-3">
                <button class="w-8 h-8 bg-white text-black rounded-full flex justify-center items-center shadow">
                    <i class="ri-add-line"></i>
                </button>
                <div class="px-4 py-1 rounded-md bg-white text-black font-semibold">01</div>
                <button class="w-8 h-8 bg-white text-black rounded-full flex justify-center items-center shadow">
                    <i class="ri-subtract-line"></i>
                </button>
            </div> -->
            <h4 class="text-lg font-bold text-green-300">‚Çπ <%= element.price %></h4>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>

  <!-- üí∞ Right Section: Price Summary -->
  <div class="w-full lg:w-1/3 bg-white rounded-lg shadow-lg p-6 border">
    <h3 class="text-2xl font-semibold mb-6 border-b pb-3">Price Breakdown</h3>

    <div class="space-y-3 text-lg">
      <div class="flex justify-between">
        <span>Total MRP</span>
        <span>‚Çπ <%= getUser.cart.reduce((acc, item) => acc + item.price, 0) %></span>
      </div>

      <div class="flex justify-between">
        <span>Discount on MRP</span>
        <span>‚Çπ 0</span>
      </div>

      <div class="flex justify-between">
        <span>Platform Fee</span>
        <span>‚Çπ 20</span>
      </div>

      <div class="flex justify-between">
        <span>Shipping Fee</span>
        <span class="text-green-600 font-semibold">FREE</span>
      </div>
    </div>

    <div class="w-full h-[1px] bg-gray-300 my-5"></div>

    <div class="flex justify-between text-xl font-bold text-green-600">
      <span>Total Amount</span>
      <span>
        ‚Çπ <%= getUser.cart.reduce((acc, item) => acc + item.price, 20) %>
      </span>
    </div>

    <button class="w-full mt-6 py-3 bg-blue-500 hover:bg-blue-600 text-white text-lg rounded-lg font-semibold transition-all">
      Proceed to Checkout
    </button>
  </div>

</div>

<%- include('./partials/footer') %>
